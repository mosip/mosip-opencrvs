	<modelVersion>4.0.0</modelVersion>
	<groupId>io.mosip</groupId>
	<artifactId>opencrvs-mediator</artifactId>
	<name>opencrvs-mediator</name>
	<version>1.2.1-SNAPSHOT</version>

